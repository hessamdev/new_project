<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_alignParentEnd="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:src="@drawable/sayehpng"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/z_model_gozaresh_circularimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:src="@drawable/damdaran"
        />
</RelativeLayout>


    <TextView
        android:id="@+id/z_model_gozaresh_textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="02:10"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"

        />
        <TextView
            android:id="@+id/z_model_gozaresh_textview_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="97/01/10"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>